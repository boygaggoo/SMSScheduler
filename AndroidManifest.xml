<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ikshvaku.smsscheduler"
    android:versionCode="7"
    android:versionName="3.3" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ikshvaku.smsscheduler.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ikshvaku.smsscheduler.Scheduler"
            android:label="@string/title_activity_scheduler" >
        </activity>
        <activity
            android:name="com.ikshvaku.smsscheduler.SendSMS"
            android:label="@string/title_activity_send_sms" >
        </activity>
        <activity
            android:name="com.ikshvaku.smsscheduler.DialogActivity"
            android:label="@string/title_activity_dialog" >
        </activity>
    </application>

</manifest>